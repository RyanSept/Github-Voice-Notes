{
  "name": "Github Voice Notes",
  "description": "Add audio clips as comments to pull requests on Github",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "48": "static/icon.jpg"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'; media-src *;",
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/pull/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
