{
  "name": "Github Voice Notes",
  "description": "Add audio clips as comments to pull requests on Github",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "48": "static/gvn-icon-128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*/pull/*",
        "*://github.com/*/*/pull/*/files",
        "*://github.com/*/*/pull/*/commits/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "tabs"
  ],
  "web_accessible_resources": [
    "static/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
